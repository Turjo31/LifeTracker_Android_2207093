<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FD8CB"
    android:orientation="vertical"
    tools:context=".AddHabitActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#517664"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shadowRadius="5"
        android:text="Add a New Habit"
        android:textColor="#D6E5E3"
        android:textSize="34sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HABIT NAME"
                android:textColor="#517664"
                android:fontFamily="sans-serif-condensed"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/habitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. Drink 8 glasses of water"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#517664"
                android:padding="12dp"
                android:background="@null"
                android:layout_marginBottom="16dp"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Save"
                android:backgroundTint="#517664"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#D6E5E3"
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>